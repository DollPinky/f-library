# Auto detect text files and perform LF normalization
* text=auto

# Java files
*.java text eol=lf
*.gradle text eol=lf
*.gradle.kts text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Config files
*.xml text eol=lf
*.json text eol=lf
*.sql text eol=lf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.class binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary

